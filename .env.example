# Search behavior: auto | ask | manual
# auto: enable heuristics to run searches automatically when needed
# ask: only run searches when user explicitly asks (e.g., "busca"), otherwise ask for permission
# manual: never run searches automatically
SEARCH_MODE=auto

# Cache TTL for search results (seconds)
SEARCH_CACHE_TTL=300

# Whether to generate a short LLM summary (true/false). Default recommended: true
SEARCH_SUMMARY=true

# Enable debug logs for search (headers/endpoints tried)
SEARCH_DEBUG=false
# Number of lines for the LLM summary (1,2,3...). Default: 1 for fastest/direct responses
SEARCH_SUMMARY_LINES=1
